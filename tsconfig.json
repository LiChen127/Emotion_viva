{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@emotion-viva/*": ["libs/*/src"]
    }
  },
  "include": ["scripts/**/*", "libs/**/*", "apps/**/*"],
  "exclude": ["node_modules", "dist"]
}
